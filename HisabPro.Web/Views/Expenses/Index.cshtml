@model HisabPro.Web.ViewModel.GridViewModel<object>
@{
    ViewData["Title"] = "Expenses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="h4 text-primary">Manage Expenses</h1>
        <p class="text-muted mb-0">
            <i class="bi bi-exclamation-circle-fill text-warning me-2"></i>
            By default, the most recent expenses are displayed first.
        </p>
    </div>
    <a asp-action="Save" class="btn btn-success">
        <i class="bi bi-plus-lg me-1"></i> Create New
    </a>
</div>

<div id="tblExpense" style="position:relative">
    @await Html.PartialAsync("_GridView", Model)
</div>

@section Scripts {
    <script>
        $('#tblExpense').gridview({
            controllerName: 'Expenses',
            titleDelete: 'Delete Expense'
        });
    </script>
}
