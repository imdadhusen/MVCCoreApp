                                                                                        <div class="form-group">
                                                                                        <label id="lblCategoryName" asp-for="lblCategoryName"> Sub Category </label>
                                                                                        <input id="txtCategoryName" asp-for="lblCategoryName" type="text" class="form-control" id="lblCategoryName" name="Name" required >
                                                                                        <span asp-validation-for="lblCategoryName" class="text-danger"></span>
