@using HisabPro.Constants.Resources;
@{
    ViewData["Title"] = SharedResource.LabelActivationFailed;
}

<div class="container">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="card mb-1">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-x-circle-fill text-danger" style="font-size: 2rem;"></i>
                        <h5 class="mb-0 p-2">@SharedResource.LabelActivationFailedTitle</h5>
                    </div>
                </div>
                <div class="grid-filter-body card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <p class="mt-4">
                                @SharedResource.LabelActivationFailedMessage
                            </p>
                            <ul class="text-start mt-3">
                                <li>@SharedResource.LabelActivationFailedReason1</li>
                                <li>@SharedResource.LabelActivationFailedReason2</li>
                                <li>@SharedResource.LabelActivationFailedReason3</li>
                            </ul>
                            <p class="mt-3">@SharedResource.LabelContactSupportMessage</p>
                            <div class="text-center">
                                <a href="/Home/Contact" class="btn btn-secondary mt-3">@SharedResource.LabelContactSupport</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-3"></div>
    </div>
</div>