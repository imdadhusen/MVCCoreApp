@{
    ViewData["Title"] = "Activation Failed";
}

<div class="container">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="card mb-1">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-x-circle-fill text-danger" style="font-size: 2rem;"></i>
                        <h5 class="mb-0 p-2">Activation Failed</h5>
                    </div>
                </div>
                <div class="grid-filter-body card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <p class="mt-4">
                                We're sorry, but your account activation could not be completed. This may have happened for one of the following reasons:
                            </p>
                            <ul class="text-start mt-3">
                                <li>The activation link has expired.</li>
                                <li>The activation link has already been used.</li>
                                <li>There was an issue processing your request.</li>
                            </ul>
                            <p class="mt-3">If you need assistance, please contact our support team.</p>
                            <div class="text-center">
                                <a href="/Home/Contact" class="btn btn-secondary mt-3">Contact Support</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-3"></div>
    </div>
</div>