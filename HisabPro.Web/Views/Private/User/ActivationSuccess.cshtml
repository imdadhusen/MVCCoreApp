@model HisabPro.DTO.Response.UserRes
@{
    ViewData["Title"] = "Activation Successful";
}
<div class="container">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6" id="dvContent">
            <div class="card mb-1">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 2rem;"></i>
                        <h5 class="mb-0 p-2">User Activation Successful</h5>
                    </div>
                </div>
                <div class="grid-filter-body card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <p class="mt-4">
                                Congratulations! Your account has been successfully activated. To access your account, please set a password.
                            </p>
                            <div class="text-center">
                                <button id="btnSetPassword" type="button" class="btn btn-primary mt-3">Set Password</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-3">
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        var urlChangePassword = '/User/ChangePassword';

        $("#btnSetPassword").click(function () {
            $("#dvContent").load(urlChangePassword + '?userId=' + @Model.Id, function (response, status, xhr) {
                if (status === "error") {
                    showError("Error while getting password screen");
                }
                //Reinitialize validation for dynamic content or partial view
                $.validator.unobtrusive.parse('#dvContent');
            });
        });

        $(document).on('click', '#btnUpdatePassword', function () {
            var form = $('#saveForm');
            form.validate();
            if (form.valid()) {
                ajax.submitForm(urlChangePassword, form, ChangeSuccess);
            }
        });

        function ChangeSuccess(res) {
            if (res.statusCode == 200) {
                showNotification(res.message);
                //Show success message and then navigate to login after 1 second
                window.setTimeout(function () {
                    window.location.href = '/User/login'
                }, 1000);
            }
        }
    });
</script>